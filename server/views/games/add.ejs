<%- include ../partials/header.ejs %>
<%- include ../partials/top_nav.ejs %>

<!--Content for the add page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
        <h1><%=title%></h1>           
            <form class="form" method="POST">

                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Game Name"
                    name="Name" required>
                 </div>

            <div class="form-group">
                <label for="yearTextField">Year</label>
                <input type="number" class="form-control"
                id="yearTextField"
                placeholder="Enter the Year of Release"
                name="Year" required>
             </div>

             <div class="form-group">
                <label for="reviewTextField">Review</label>
                <input type="text" class="form-control"
                id="reviewTextField"
                placeholder="Enter your Review"
                name="Review" required>
            </div>

            <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <input type="text" class="form-control"
                id="descriptionTextField"
                placeholder="Enter the description"
                name="Description" required>
            </div>

            <div class="form-group">
                <label for="ratingTextField">Rating</label>
                <input type="text" class="form-control"
                id="ratingTextField"
                placeholder="Enter your Rating"
                name="Rating" required>
            </div>
            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form-control"
                id="priceTextField"
                placeholder="Enter the game price"
                name="Price" required>
            </div>


            <button class="btn-btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit
            </button>

            <a href="/gameslist" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>

        </div>
    </div>
</div>
<%- include ../partials/bot_nav.ejs %>